<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.hubu.mall.dao.SkuSaleAttrValueDao">
    <resultMap id="skuItemSaleAttrValues" type="edu.hubu.mall.vo.SkuItemSaleAttrVo">
        <result column="attr_id" property="attrId"></result>
        <result column="attr_name" property="attrName"></result>
        <collection property="attrValues" ofType="edu.hubu.mall.vo.AttrValuesWithSkuIdsVo">
            <result column="attr_value" property="attrValue"></result>
            <result column="sku_ids" property="skuIds"></result>
        </collection>
    </resultMap>

    <select id="getSkuItemSaleAttrValuesBySpuId" resultMap="skuItemSaleAttrValues">
        select
            b.attr_id,
            b.attr_name,
            b.attr_value,
            GROUP_CONCAT(distinct a.sku_id) as sku_ids
        from pms_sku_info a
                 left join pms_sku_sale_attr_value b on a.sku_id = b.sku_id
        where a.spu_id = #{spuId}
        group by b.attr_id,b.attr_name,b.attr_value
    </select>
</mapper>
